<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/background"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/naglowek_rej1"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/naglowekRejestracja1"
            android:textAlignment="center"
            android:textColor="@color/kolor1"
            android:textSize="30sp"
            android:layout_marginTop="80sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wpisz_imie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColor="@color/kolor1"
                android:hint="@string/enter_name"
                app:hintTextColor="@color/kolor2"
                app:boxStrokeColor="@color/kolor2"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/imienazwisko"
                app:startIconTint="@color/kolor2"
                app:endIconMode="clear_text"
                app:endIconTint="@color/kolor2">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/kolor2"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wpisz_nazwisko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColor="@color/kolor1"
                android:hint="@string/enter_surname"
                app:hintTextColor="@color/kolor2"
                app:boxStrokeColor="@color/kolor2"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/imienazwisko"
                app:startIconTint="@color/kolor2"
                app:endIconMode="clear_text"
                app:endIconTint="@color/kolor2">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/kolor2"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wpisz_numer_pesel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColor="@color/kolor1"
                android:hint="@string/enter_pesel"
                app:hintTextColor="@color/kolor2"
                app:boxStrokeColor="@color/kolor2"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/imienazwisko"
                app:startIconTint="@color/kolor2"
                app:endIconMode="clear_text"
                app:endIconTint="@color/kolor2">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/kolor2"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wpisz_adres_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColor="@color/kolor1"
                android:hint="@string/enter_adress"
                app:hintTextColor="@color/kolor2"
                app:boxStrokeColor="@color/kolor2"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/email"
                app:startIconTint="@color/kolor2"
                app:endIconMode="clear_text"
                app:endIconTint="@color/kolor2">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/kolor2"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wpisz_haslo_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColor="@color/kolor1"
                android:hint="@string/enter_haslo_reg"
                app:hintTextColor="@color/kolor2"
                app:boxStrokeColor="@color/kolor2"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/padlock"
                app:startIconTint="@color/kolor2"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/kolor2">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/kolor2"
                    android:inputType="textPassword"/>

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/zarejestruj_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_button1"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:background="@drawable/rounded_rectangle"
                android:layout_marginTop="20dp"
                android:onClick="callRegisterActivity2"
                tools:ignore="OnClick" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>