<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OknoUzytkownika"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/kolor2">

    <RelativeLayout
        android:layout_weight='2'
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:id="@+id/naglowek_oknouzytkownika"
                    android:src="@drawable/ecg"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:id="@+id/naglowek_oknouzytkownika2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/okno_uz_naglowek"
                    android:textColor="@color/kolor1"
                    android:textSize="30sp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        <GridLayout
            android:id='@+id/grid'
            android:layout_width="match_parent"
            android:layout_marginTop="200dp"
            android:layout_height="700dp"
            android:columnCount="2"
            android:rowCount="2"
            android:background="@drawable/background_grid"
            tools:ignore="MissingConstraints">
        </GridLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>