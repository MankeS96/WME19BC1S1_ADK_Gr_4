<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kolor2"
    android:weightSum="5"
    android:orientation="vertical"
    tools:context=".OknoPoRejestracji">
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints,UselessParent"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/naglowek_oknouz1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ecg"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/naglowek_oknouz2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/naglowek_oknouz"
                android:textColor="@color/kolor1"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textAlignment="center"/>

        </LinearLayout>
    </RelativeLayout>
    <GridLayout
        android:id="@+id/grid_backdround"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="170dp"
        android:columnCount="2"
        android:rowCount="2"
        android:background="@drawable/background_grid">
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>