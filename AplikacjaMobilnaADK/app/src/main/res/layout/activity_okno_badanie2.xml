<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OknoBadanie2"
    android:background="@color/background"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/komunikatBadanie2"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/komunikatBadanie2"
            android:textAlignment="center"
            android:textColor="@color/kolor1"
            android:textSize="23sp"/>
        <ImageView
            android:id="@+id/naglowek_oknoBadanie2"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/chest1"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

<!--            <Button-->
<!--                android:id="@+id/rozpocznijBadanieButton"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/przeprowadz_pomiar_button"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="15sp"-->
<!--                android:background="@drawable/rounded_rectangle"-->
<!--                android:layout_marginTop="25dp"-->
<!--                android:onClick="callOknoBadanie2"-->
<!--                tools:ignore="OnClick" />-->
            <Chronometer
                android:id="@+id/record_Timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:layout_marginTop="15dp"
                android:textColor="@color/kolor2"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/recordButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/record"
                tools:ignore="ContentDescription" />



        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>